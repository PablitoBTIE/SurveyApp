<Window x:Class="SurveyCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Survey Creator" Height="450" Width="600" Background="Bisque">
    
    <StackPanel>
        <TextBox Background="Khaki" Name="QuestionTextBox" Width="400" Height="30" Margin="10" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <RadioButton Name="SingleChoiceRadioButton" Content="Jednokrotnego wyboru" Width="150" Margin="10,0"/>
            <RadioButton Content="Wielokrotnego wyboru" Width="150" Margin="10,0"/>
        </StackPanel>
        <TextBox Background="Khaki" Name="OptionsTextBox" Width="400" Height="30" Margin="10" HorizontalAlignment="Center"/>
        <Button Content="Dodaj Pytanie" Width="100" Height="30" Margin="10" HorizontalAlignment="Center" Click="AddQuestionButton_Click"/>
        <ListBox Background="Chocolate" Name="QuestionsListBox" Width="510" Height="200" Margin="10" HorizontalAlignment="Center"/>
        <Button Content="Zapisz Ankietę" Width="100" Height="30" Margin="10" HorizontalAlignment="Center" Click="SaveSurveyButton_Click"/>
    </StackPanel>
</Window> 